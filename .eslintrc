{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "ecmaFeatures": {
        "arrowFunctions": true,
        "modules": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}